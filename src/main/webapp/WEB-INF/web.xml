<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>Phoneshop servlet api training</display-name>

  <servlet>
    <servlet-name>productList</servlet-name>
    <servlet-class>com.es.phoneshop.web.ProductListPageServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>productList</servlet-name>
    <url-pattern>/products</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>productDetailsPageServlet</servlet-name>
    <servlet-class>com.es.phoneshop.web.ProductDetailsPageServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>productDetailsPageServlet</servlet-name>
    <url-pattern>/products/</url-pattern>
  </servlet-mapping>

  <error-page>
    <error-code>500</error-code>
    <location>/products</location>
  </error-page>

  <listener>
    <listener-class>com.es.phoneshop.model.product.DaoProductListListener</listener-class>
  </listener>

</web-app>
